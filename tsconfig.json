{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es2020"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": ["src"]
}
